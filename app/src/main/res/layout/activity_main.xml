<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/headRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#F84242"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/headred" />

            <ImageButton
                android:id="@+id/fistRed"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:backgroundTint="#F84242"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/punio" />

            <ImageButton
                android:id="@+id/bodyRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#F84242"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bodyred" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/headBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#4A62FB"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/headblue" />

            <ImageButton
                android:id="@+id/fistBlue"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:backgroundTint="#4A62FB"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/punio" />

            <ImageButton
                android:id="@+id/bodyBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#4A62FB"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bodyblue" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>